{
  "name": "TimeTracker",
  "version": "1.1",
  "description": "Розширення для відстеження свого часу.",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "idle",
    "storage",
    "unlimitedStorage"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "icons": {
    "128": "icon/128x128.png",
    "16": "icon/16x16.png",
    "32": "icon/32x32.png",
    "48": "icon/48x48.png"
  },
  "background": {
    "scripts": [
      "data.js",
      "background.js"
    ]
  },
  "offline_enabled": true
}