{
  "name": "TimeTracker",
  "version": "1.0",
  "description": "Розширення для відстеження свого часу.",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*/*",
    "tabs",
    "activeTab",
    "idle",
    "storage",
    "unlimitedStorage",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "128": "icon/128x128.png",
    "16": "icon/16x16.png",
    "32": "icon/32x32.png",
    "48": "icon/48x48.png"
 },
  "background": {
    "scripts": [
      "data.js",
      "background.js"
    ]
  },
  "offline_enabled": true
}